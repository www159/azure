<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="azure_m.Views.MainPage"
             xmlns:vm="clr-namespace:azure_m.ViewModels"
             Title="主页">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Margin="5,0,5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--<StackLayout BackgroundColor="{StaticResource Accent}" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                <ContentView Padding="0,40,0,40" VerticalOptions="FillAndExpand">
                    <Image Source="xamarin_logo.png" VerticalOptions="Center" HeightRequest="64" />
                </ContentView>
            </StackLayout>
        </StackLayout>-->
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="5,0,5,0" Spacing="10">
                <Label Text="Azure服务" FontSize="Title"/>
                <Grid Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.16*" />
                        <ColumnDefinition Width="0.16*" />
                        <ColumnDefinition Width="0.16*" />
                        <ColumnDefinition Width="0.16*" />
                        <ColumnDefinition Width="0.16*" />
                        <ColumnDefinition Width="0.16*" />
                        <ColumnDefinition Width="0.16*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*" />
                        <RowDefinition Height="0.01*" />
                        <RowDefinition Height="0.1*" />
                        <RowDefinition Height="0.01*" />
                    </Grid.RowDefinitions>
                    <ImageButton Source="add1.png" Grid.Row="0" Grid.Column="0" BackgroundColor="White"/>
                    <Label Text="创建资源" Grid.Row="1" Grid.Column="0"/>
                    <ImageButton Source="subscribe5.png" Grid.Row="0" Grid.Column="3" BackgroundColor="White"/>
                    <Label Text="订阅" Grid.Row="1" Grid.Column="3"/>
                    <ImageButton Source="vm2" Grid.Row="0" Grid.Column="6" BackgroundColor="White"/>
                    <Label Text="虚拟机" Grid.Row="1" Grid.Column="6"/>

                    <ImageButton Source="dashboard2.png" Grid.Row="2" Grid.Column="0" BackgroundColor="White"/>
                    <Label Text="仪表盘" Grid.Row="3" Grid.Column="0"/>
                    <ImageButton Source="monitor2.png"   Grid.Row="2" Grid.Column="3" BackgroundColor="White"/>
                    <Label Text="Azure Monitor" Grid.Row="3" Grid.Column="3"/>
                    <ImageButton Source="more6.png"  Grid.Row="2" Grid.Column="6" BackgroundColor="White"/>
                    <Label Text="更多服务" Grid.Row="3" Grid.Column="6"/>
                </Grid>
                <!--<Label FontSize="16" Padding="0,24,0,0">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Learn more at "/>
                                <Span Text="https://aka.ms/xamarin-quickstart" FontAttributes="Bold"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Button Margin="0,10,0,0" Text="Learn more"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />-->
                <Label Text="Resources" FontSize="Title"  />
                <Grid Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.11*"/>
                        <ColumnDefinition Width="0.15*"/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*" />
                        <RowDefinition Height="0.1*" />
                    </Grid.RowDefinitions>
                    <Button x:Name="RecentBtn" Text="Recent" FontSize="10" TextColor="white" BorderColor="white" BackgroundColor="#1e6ede" Grid.Column="0" Clicked="onRecentBtn_Clicked"/>
                    <Button x:Name="FavoriteBtn" Text="Favorite" FontSize="10" TextColor="#1e6ede" BorderColor="#1e6ede" BackgroundColor="LightGray" Grid.Column="1" Clicked="onFavoriteBtn_Clicked"/>
                 </Grid>
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
