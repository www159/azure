<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="azure_m.Views.AllResourcesPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:azure_m.ViewModels"
             xmlns:model="clr-namespace:azure_m.Models">
    <ContentPage.Resources>
        <Color x:Key="cardBack">#fffbf0</Color>
        <Style
            TargetType="StackLayout"
            x:Key="resourceCard">
            <Setter
                Property="Padding"
                Value="5,5,5,5"/>
            <Setter
                Property="VerticalOptions"
                Value="Center" />
        </Style>
        <Style
            TargetType="StackLayout"
            x:Key="resourceCardInner">
            <Setter
                Property="HeightRequest"
                Value="100"/>
            <Setter
                Property="BackgroundColor"
                Value="{StaticResource cardBack}"/>
            <Setter 
                Property="VerticalOptions"
                Value="Center"/>
        </Style>
        <Style
            TargetType="Image">
            <Setter
                Property="HeightRequest"
                Value="50"/>
            <Setter
                Property="WidthRequest"
                Value="50"/>
            <Setter
                Property="HorizontalOptions"
                Value="Center"/>
            <Setter
                Property="Margin"
                Value="0,0,0,0"/>
        </Style>
        <Style
            TargetType="Label"
            x:Key="innerCardLabel">
            <Setter
                Property="HorizontalOptions"
                Value="Center"/>
        </Style>

    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="test" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Frame>
            <StackLayout>
                <!--<Frame BorderColor="Black" Padding="5" Margin="5">-->
                <ScrollView 
                    Orientation="Horizontal" 
                    Margin="20">
                    <StackLayout 
                        Orientation="Horizontal"
                        HorizontalOptions="Center">
                        <Button Text="创建"/>
                        <Button Text="刷新"/>
                        <Button Text="csv"/>
                    </StackLayout>
                </ScrollView>
                <!--</Frame>-->
                <StackLayout
                HorizontalOptions="Center" 
                Orientation="Horizontal"
                HeightRequest="40">
                    <Entry 
                    Placeholder="模糊搜索" 
                    WidthRequest="120"/>
                    <Button Text="选择类型" />
                </StackLayout>
        </Frame>
        <RefreshView
                x:DataType="local:ResourceViewModel"
                Command="{Binding LoadResourcesCommand}"
                IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
                <!--<ScrollView>-->
                    <CollectionView
                    x:Name="ResourceTabVIew"
                    ItemsSource="{Binding Resources}"
                    SelectionMode="None"
                    ItemsLayout="VerticalGrid, 2">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout 
                                Style="{StaticResource resourceCard}"
                                x:DataType="model:Resource">
                                    <Frame 
                                    BorderColor="{StaticResource Primary}"
                                    HasShadow="True"
                                    Padding="5"
                                    CornerRadius="5">
                                        <StackLayout 
                                        Style="{StaticResource resourceCardInner}">
                                            <Image Source="{Binding imgUrl}"/>
                                            <Label
                                            Style="{StaticResource innerCardLabel}"
                                            Text="{Binding type}"
                                            FontAttributes="Bold"
                                            Margin="0,-5,0,0"/>
                                            <Label
                                            Style="{StaticResource innerCardLabel}"
                                            Text="{Binding location}"/>
                                        </StackLayout>
                                    </Frame>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                <!--</ScrollView>-->
            </RefreshView>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>