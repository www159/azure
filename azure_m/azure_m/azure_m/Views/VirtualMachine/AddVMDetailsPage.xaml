                            <Label Text="{Binding vm.body.properties.osProfile.adminUsername}" Style="{StaticResource itemLabel}"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Grid.Row="11" Grid.Column="0" x:Name="c_sshkey">
